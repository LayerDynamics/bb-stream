{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bb-stream",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "http://localhost:*" }
      ]
    }
  ]
}
